{
  "name": "@davikiyo/simple-ui-components",
  "version": "0.6.0",
  "description": "UI library for webpages.",
  "repository": {
    "type": "git",
    "url": "https://github.com/davikiyo/simple-ui-components.git"
  },
  "bugs": {
    "url": "https://github.com/davikiyo/simple-ui-components/issues"
  },
  "author": "Davi Handa <davikiyo@gmail.com> (https://github.com/davikiyo/)",
  "license": "MIT",
  "private": false,
  "keywords": [
    "react",
    "react-components",
    "styled",
    "component-library",
    "a11y",
    "@stitches/react",
    "front-end",
    "web"
  ],
  "peerDependencies": {
    "react": "^16.8.0 || 17.x || 18.x",
    "react-dom": "^16.8.0 || 17.x || 18.x"
  },
  "type": "module",
  "files": [
    "lib"
  ],
  "main": "./lib/index.umd.js",
  "module": "./lib/index.es.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.es.js",
      "require": "./lib/index.umd.js"
    }
  },
  "dependencies": {
    "@stitches/react": "^1.2.8",
    "classnames": "^2.3.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.5.13",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/builder-vite": "^0.2.5",
    "@storybook/react": "^6.5.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.2",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitejs/plugin-react": "^2.0.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-storybook": "^0.6.7",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.0.4",
    "prettier": "2.7.1",
    "react": "^18.0.0",
    "react-dom": "18.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vite-plugin-dts": "^1.4.1",
    "vite-plugin-svgr": "^2.2.2"
  },
  "scripts": {
    "dev": "start-storybook -p 6006 --no-open",
    "build-storybook": "build-storybook",
    "build": "yarn typecheck && vite build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc -p ./tsconfig.prod.json",
    "lint": "eslint . --cache --report-unused-disable-directives --ext .js,.ts,.tsx",
    "lint:staged": "lint-staged",
    "lint:write": "eslint --cache --report-unused-disable-directives --ext .js,.ts,.tsx --fix",
    "prettier": "prettier -c",
    "prettier:write": "prettier -w"
  }
}
