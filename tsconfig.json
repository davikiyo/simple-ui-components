{
  "include": ["./src/**/*", "./stories/**/*"],
  "exclude": ["./.storybook"],
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "components": ["src/index.ts"],
      "styles": ["src/styles/index.ts"],
      "assets/*": ["src/assets/*"],
      "utils/*": ["src/utils/*"],
      "types/*": ["src/types/*"],
      "HOC/*": ["src/components/HOC/*"]
    },
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
